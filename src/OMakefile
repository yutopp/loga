########################################################################
# OCaml configuration.

################################################
# Configuration.  You may want to modify any of these configuration
# variables.
#

#
# Compile native or byte code?
#
# The default values are defined as follows:
#
NATIVE_ENABLED = true
BYTE_ENABLED = true

#
# Various options
#
OCAMLFLAGS    += -annot -bin-annot
# OCAMLCFLAGS   +=
# OCAMLOPTFLAGS +=
# OCAML_LINK_FLAGS +=
# OCAML_BYTE_LINK_FLAGS +=
# OCAML_NATIVE_LINK_FLAGS +=

################################################
# Generated files
#
# Workaround for the fact that ocamldep does not pay attention to .mll
# and .mly files.
#
# OCamlGeneratedFiles(parser.ml lexer.ml)

################################################
# Build an OCaml library
#

LIB_FILES[] =
    loga_context
    loga_severity
    loga_printer
    loga

LIB = loga

.DEFAULT: $(OCamlLibrary $(LIB), $(LIB_FILES))

################################################
# Build an OCaml program
#

BIN_FILES[] =
    ppx_loga

PROGRAM = ppx-loga
OCAML_LIBS +=
OCAML_CLIBS +=
OCAML_OTHER_LIBS +=
OCAML_LIB_FLAGS +=

.DEFAULT: $(OCamlProgram $(PROGRAM), $(BIN_FILES))

install:
    $(OCAMLFIND) install loga ../META *.cmx *.cmi *.cma *.cmxa *.a $(PROGRAM)

uninstall:
    $(OCAMLFIND) remove loga

clean:
    rm -f *~ *.opt *.cmi *.cmx *.cmt *.cmti *.cmp *.cmo *.cma *.cmxa *.omc \
        *.o *.a *.out *.run *.s *.bc *.log *.cache *.annot $(LIB) $(PROGRAM)
